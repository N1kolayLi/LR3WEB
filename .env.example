# Environment configuration for Gunicorn deployment
# Copy this file to .env and update values as needed

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Gunicorn configuration
GUNICORN_BIND=0.0.0.0:8000
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
GUNICORN_ACCESS_LOG=-
GUNICORN_ERROR_LOG=-
GUNICORN_LOG_LEVEL=info
GUNICORN_RELOAD=False

# Application
APP_UPLOAD_FOLDER=static/uploads
APP_MAX_CONTENT_LENGTH=16777216

# SSL (optional)
# GUNICORN_KEYFILE=/path/to/keyfile.key
# GUNICORN_CERTFILE=/path/to/certfile.crt
